<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>            
        <goals>
            <goal>clean</goal>
            <goal>javafx:run</goal>
        </goals>
    </action>
    <action>
        <actionName>debug</actionName>            
        <goals>
            <goal>clean</goal>
            <goal>javafx:run@ide-debug</goal>
        </goals> 
        <properties>
            <jpda.listen>true</jpda.listen>
        </properties>           
    </action>
    <action>
        <actionName>CUSTOM-create-native-image</actionName>
        <displayName>create-native-image</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>                
        </goals>
        <activatedProfiles>
            <activatedProfile>package</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>profile</actionName>            
        <goals>
            <goal>clean</goal>
            <goal>javafx:run@ide-profile</goal>
        </goals>            
        <properties>
                <exec.args>-classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
    </action>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>verify</goal>
        </goals>
    </action>
    <action>
            <actionName>CUSTOM-depn</actionName>
            <displayName>Dependency check of plugins</displayName>
            <goals>
                <goal>site</goal>
            </goals>
        </action>
</actions>
